
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Portfolio Start -->
<div class="container-fluid py-5 px-0">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <h1 class="section-title position-relative text-center mb-5">Delicious Ice Cream Made From Our Very Own Organic Milk</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <ul class="list-inline mb-4 pb-2" id="portfolio-flters">
                    <li class="btn btn-sm btn-outline-primary m-1 active" data-filter="*">All</li>
                    <li class="btn btn-sm btn-outline-primary m-1" data-filter=".first">Flavors</li>
                    <li class="btn btn-sm btn-outline-primary m-1" data-filter=".second">Recipes</li>
                    <li class="btn btn-sm btn-outline-primary m-1" data-filter=".third">Books</li>
                </ul>
            </div>
        </div>
        <div class="row m-0 portfolio-container">
            @foreach (var item in ViewData["flavors"] as IEnumerable<IcreCreamParlour.Model.DTO.FlavorDTO>)
                    {
            <div class="col-lg-4 col-md-6 p-0 portfolio-item first">
                <div class="position-relative overflow-hidden">
                    <img class="rounded-circle w-100 h-100 bg-light p-3" src="@("~/images/flavorimg/"+item.Image)" asp-append-version="true" style="object-fit: cover;">
                        <a class="portfolio-btn" href="@("~/images/flavorimg/"+item.Image)" data-lightbox="portfolio">
                        <i class="fa fa-plus text-primary" style="font-size: 60px;"></i>
                    </a>
                </div>
            </div>}
            @foreach(var item in ViewData["recipes"] as IEnumerable<IcreCreamParlour.Model.DTO.RecipeDTO>){
            <div class="col-lg-4 col-md-6 p-0 portfolio-item second">
                <div class="position-relative overflow-hidden">
                    <img class="rounded-circle w-100 h-100 bg-light p-3" src="@("~/images/recipeimg/"+item.Image)" asp-append-version="true" style="object-fit: cover;">
                        <a class="portfolio-btn" href="@("~/images/recipeimg/"+item.Image)" data-lightbox="portfolio">
                        <i class="fa fa-plus text-primary" style="font-size: 60px;"></i>
                    </a>
                </div>
            </div>}
            @foreach (var item in ViewData["books"] as IEnumerable<IcreCreamParlour.Model.DTO.BookDTO>){
            <div class="col-lg-4 col-md-6 p-0 portfolio-item third">
                <div class="position-relative overflow-hidden">
                    <img class="rounded-circle w-100 h-100" src="@("~/images/bookimg/"+item.Image)" asp-append-version="true" style="object-fit: cover;">
                        <a class="portfolio-btn" src="@("~/images/bookimg/"+item.Image)" asp-append-version="true" data-lightbox="portfolio">
                        <i class="fa fa-plus text-primary" style="font-size: 60px;"></i>
                    </a>
                </div>
            </div>}
            @*<div class="col-lg-4 col-md-6 p-0 portfolio-item first">
                <div class="position-relative overflow-hidden">
                    <img class="img-fluid w-100" src="img/portfolio-4.jpg" alt="">
                    <a class="portfolio-btn" href="img/portfolio-4.jpg" data-lightbox="portfolio">
                        <i class="fa fa-plus text-primary" style="font-size: 60px;"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 p-0 portfolio-item second">
                <div class="position-relative overflow-hidden">
                    <img class="img-fluid w-100" src="img/portfolio-5.jpg" alt="">
                    <a class="portfolio-btn" href="img/portfolio-5.jpg" data-lightbox="portfolio">
                        <i class="fa fa-plus text-primary" style="font-size: 60px;"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 p-0 portfolio-item third">
                <div class="position-relative overflow-hidden">
                    <img class="img-fluid w-100" src="img/portfolio-6.jpg" alt="">
                    <a class="portfolio-btn" href="img/portfolio-6.jpg" data-lightbox="portfolio">
                        <i class="fa fa-plus text-primary" style="font-size: 60px;"></i>
                    </a>
                </div>
            </div>*@
        </div>
    </div>
</div>
<!-- Portfolio End -->
