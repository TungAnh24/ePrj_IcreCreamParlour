@model IcreCreamParlour.Model.Entities.Flavor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">Insert Flavor</h6>
            <form class="forms-sample" asp-area="Admin" asp-controller="Flavor" asp-action="Create">
                <div class="form-group row">
                    <label asp-for="FlavorName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="FlavorName" placeholder="FlavorName">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Ingredients" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Ingredients" autocomplete="off" placeholder="Ingredients">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MakingProcess" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="MakingProcess"  placeholder="Description">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Image" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="file" class="form-control" asp-for="Image">
                    </div>
                </div>
                <div class="form-check form-check-flat form-check-primary mt-0">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                        <i class="input-frame"></i>
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>