@model IEnumerable<IcreCreamParlour.Model.DTO.BookDTO>
@using IcreCreamParlour.Model.DTO
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="navbar-header">
                    <a asp-action="Create" class="btn btn-outline-danger">Isert book</a>
                    <button type="button" class="navbar-toggle collapsed pull-left btn btn-outline-info" data-toggle="collapse" data-target="#navbar-collapse">
                        Search by here
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div> <!-- navbar-header -->
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <form class="navbar-form navbar-right" role="search" asp-action="Index" method="get">
                        <div class="form-group input-group">
                            <input type="search" class="form-control input-sm" placeholder="Search here ..." id="sitesearch" name="strSearching">
                            <span class="input-group-addon"><button type="submit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-search"></span></button></span>
                        </div>
                    </form>
                </div>
                <div>
                </div>
                <div class="table-responsive">
                    <div id="dataTableExample_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="dataTableExample" class="table dataTable no-footer" role="grid" aria-describedby="dataTableExample_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 187.762px;">
                                                @Html.DisplayNameFor(model => model.BookId)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 293.487px;">
                                                @Html.DisplayNameFor(model => model.Title)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.Description)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.ImageFile)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.Price)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.CreateDate)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.PersonCreate)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.Author)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.PersonUpdate)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTableExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 134.45px;">
                                                @Html.DisplayNameFor(model => model.UpdateDate)
                                            </th>
                                            <th class="text-center">
                                                Acion
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="sorting_1">
                                                    @Html.DisplayFor(modelItem => item.BookId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Title)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    @*@Html.DisplayFor(modelItem => item.Image)*@
                                                    <img src="@("~/images/bookimg/" + item.Image)" asp-append-version="true" />
                                                    @*<img asp-append-version="true" src="~/images/bookimg/dangcoc_dungCoMatreu.png" />*@
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Price)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PersonCreate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Author)
                                                </td>
                                                @{
                                                    if (item.AdminUpdateId != null)
                                                    {
                                                        <td>@Html.DisplayFor(modelItem => item.PersonUpdate)</td>
                                                    }
                                                    else
                                                    {
                                                        <td>Đang cập nhật</td>
                                                    }
                                                }
                                                @{
                                                    if (item.UpdateDate == null)
                                                    {
                                                        <td>Đang cập nhật</td>
                                                    }
                                                    else
                                                    {
                                                        <td>@Html.DisplayFor(modelItem => item.UpdateDate)</td>
                                                    }
                                                }
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.BookId" class="text-warning btn btn-outline-warning">
                                                        <i data-feather="edit-2"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.BookId" class="text-danger btn btn-outline-danger" onclick="return confirm('Do you want to remove this book?')">
                                                        <i data-feather="trash-2"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", "Books", new {page = page}))*@


