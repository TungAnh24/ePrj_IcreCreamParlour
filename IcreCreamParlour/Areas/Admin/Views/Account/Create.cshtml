@model IcreCreamParlour.Model.Entities.Admin
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">Add new account</h6>
            <form class="forms-sample" asp-area="Admin" asp-controller="Account" asp-action="Create">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Email" autocomplete="off" placeholder="Email">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Password" placeholder="Password">
                    </div>
                </div>
                <button type="submit" class="btn btn-inverse-primary mr-2">Add new</button>
                <a asp-controller="Account" asp-action="Index" class="btn btn-inverse-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>

