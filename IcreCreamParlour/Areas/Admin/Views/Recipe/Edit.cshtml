@model IcreCreamParlour.Model.Entities.Recipe
@using IcreCreamParlour.Model.Entities;
@{
    DbIcecreamParlourContext _context = new DbIcecreamParlourContext();
}
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">Insert Book</h6>
            <form class="forms-sample" asp-area="Admin" asp-controller="Recipe" asp-action="Edit" method="post">
                <div class="form-group row" hidden>
                    <label asp-for="RecipeId" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="RecipeId" placeholder="Title" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="RecipeName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="RecipeName" placeholder="Title">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Image" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="file" class="form-control" asp-for="Image">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Ingredients" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Ingredients" placeholder="Ingredients">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MakingProcess" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="MakingProcess" placeholder="MakingProcess">
                    </div>
                </div>
                <div class="form-group row" hidden>
                    <label asp-for="AdminCreateId" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="AdminCreateId">
                    </div>
                </div>
                <div class="form-group row" hidden>
                    <label asp-for="PublistDate" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="PublistDate">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FlavorId" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <select asp-for="FlavorId" class="form-select form-select-lg mb-3 form-control">
                            <option selected>Chọn Flavor</option>
                            @{
                                List<Flavor> flavors = _context.Flavors.ToList();
                                foreach (var item in flavors)
                                {
                                    <option value="@item.FlavorId">@item.FlavorName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row" hidden>
                    <label asp-for="UpdateDate" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="UpdateDate">
                    </div>
                </div>
                <div class="form-group row" hidden>
                    <label asp-for="AdminUpdateId" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="AdminUpdateId">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Create</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
